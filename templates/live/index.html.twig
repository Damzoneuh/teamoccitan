{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Live{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col mt-4 mb-4">
                <div class="bg-blue-gradient text-grey-inherit p-2">
                    <h1 class="text-center mt-2 mb-4">Live</h1>
                    <div id="twitch-embed" class="vh-100"></div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://embed.twitch.tv/embed/v1.js"></script>
    <script type="text/javascript">
        new Twitch.Embed("twitch-embed", {
            width: '100%',
            height: '100%',
            channel: "team_occitans_racing",
        });
    </script>
{% endblock %}

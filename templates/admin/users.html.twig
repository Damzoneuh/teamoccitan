{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Admin{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <table class="table text-blue">
                    <tbody>
                    {% if users|length > 0 %}
                        {% for user in users %}
                            <tr>
                                <td class="text-center">
                                    {{ user.email }}
                                </td>
                                <td class="text-center text-success">
                                    {% set setted = 0 %}
                                    {% for role in user.roles %}
                                        {% if role == 'ROLE_SUPER_ADMIN'%}
                                            {% if setted == 0 %}
                                                Admin
                                                {% set setted = 1 %}
                                            {% endif %}
                                        {% endif %}
                                        {% if role == 'ROLE_ADMIN' %}
                                            {% if setted == 0 %}
                                                Admin
                                                {% set setted = 1 %}
                                            {% endif %}
                                        {% endif %}
                                        {% if role == 'ROLE_EDITOR' and setted == 0 %}
                                            {% if setted == 0 %}
                                                Editeur
                                                {% set setted = 1 %}
                                            {% endif %}
                                        {% endif %}
                                        {% if role == 'ROLE_PILOT' and setted == 0 %}
                                            {% if setted == 0 %}
                                                Pilot
                                                {% set setted = 1 %}
                                            {% endif %}
                                        {% endif %}
                                        {% if role == 'ROLE_USER' and setted == 0 %}
                                            {% if setted == 0 %}
                                                Visiteur
                                                {% set setted = 1 %}
                                            {% endif %}
                                        {% endif %}
                                    {% endfor %}
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('admin_user', {id: user.id}) }}">{{ user.name }} {{ user.lastname }}</a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
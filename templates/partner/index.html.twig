{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Admin{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="mt-5 mb-5 bg-blue-gradient text-grey-inherit p-4 rounded shadow-lg">
                <h1 class="text-center mt-4 mb-5">Gestion des partenaires</h1>
                <div class="row border-bottom mb-4 align-items-stretch">
                    <table class="table table-striped table-responsive-sm text-grey-inherit">
                        <tbody>
                        {% for partner in partners %}
                            <tr>
                                <td>{{ partner.name }}</td>
                                <td>{{ partner.link }}</td>
                                <td>
                                    <a href="{{ path('partner_delete', {id: partner.id}) }}"><i class="fas fa-trash text-danger"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2">Pas de partenaires</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

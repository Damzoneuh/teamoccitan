{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Connexion{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-6 offset-md-3 mt-5 mb-5">
                <div class="p-4 bg-blue-gradient rounded shadow-lg">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <h1 class="h3 mb-3 font-weight-normal text-center">Please sign in</h1>
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                            <div class="checkbox mb-3 mt-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                </label>
                            </div>

                        <div class="text-center mt-4">
                            <button class="btn btn-lg btn-success" type="submit">
                                Connexion
                            </button>
                        </div>
                    </form>

                    <div class="mt-2 text-center row">
                        <div class="mt-2 col-sm-12 col-md-6">
                            <a href="{{ path('register') }}" class="btn btn-group btn-success m-auto mt-2">Pas encore de compte ?</a>
                        </div>
                        <div class="mt-2 col-sm-12 col-md-6">
                            <a href="{{ path('reset_request') }}" class="btn btn-group btn-success m-auto mt-2">Mot de passe oubli√© ?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
